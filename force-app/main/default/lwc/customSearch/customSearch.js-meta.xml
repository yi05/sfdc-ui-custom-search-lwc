<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <masterLabel>Custom Search</masterLabel>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage">
            <property name="objectApiName" type="String" default="Account" label="Object API Name" description="e.g. Account"/>
            <property name="objectLabel" type="String" default="Account" label="Object Label" description="e.g. Account"/>
            <property name="objectLabelPlural" type="String" default="Accounts" label="Object Label (Plural)" description="e.g. Accounts"/>
            <property name="queryLimit" type="Integer" default="25" label="Query Limit" description="Number of returned records per query, e.g. 25"/>
            <property name="cmpIconName" type="String" default="custom:custom47" label="Component Icon Name" description="e.g. standard:account, custom:custom47. Reference: https://www.lightningdesignsystem.com/icons/"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
